{
  "name": "oliche",
  "version": "1.0.0",
  "description": "Secure password storage application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch main.js --watch src --exec electron .",
    "pack": "npx electron-builder --dir",
    "dist": "npx electron-builder",
    "dist:mac": "npx electron-builder --mac",
    "dist:win": "npx electron-builder --win",
    "dist:linux": "npx electron-builder --linux",
    "package-mac": "electron-packager . Oliche --platform=darwin --arch=arm64 --out=release --overwrite --prune=true --ignore=dist --ignore=dmg-contents --ignore=release",
    "build": "node build.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "canvas": "^2.11.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.oliche.app",
    "productName": "Oliche",
    "copyright": "Copyright Â© 2023",
    "mac": {
      "category": "public.app-category.utilities",
      "darkModeSupport": true,
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "dmg": {
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 280,
          "type": "file"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
